<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_1_0.dtd">
<service-builder package-path="com.meera.db">
	<author>E5410</author>
	<namespace>TEST</namespace>
	<entity name="Employee" local-service="true" remote-service="true" cache-enabled="false">
		<!-- PK fields -->
		<column name="employeeId" type="long" primary="true" />
		<!-- Audit fields -->
		<column name="employeeName" type="String" />
		<column name="employeeDesignation" type="String" />
		<column name="addresess" type="Collection" entity="Address" mapping-table="Employee_Address"/>
		<!-- Order -->
		<order by="asc">
			<order-column name="employeeId" />
		</order>
		<!-- Finder methods -->
		<finder name="employeeName" return-type="Collection">
			<finder-column name="employeeName" />
		</finder>
	</entity>
	<entity name="Address" local-service="true" remote-service="true" cache-enabled="false">
		<!-- PK fields -->
		<column name="addressId" type="long" primary="true" />
		<!-- Audit fields -->
		<column name="street1" type="String" />
		<column name="street2" type="String" />
		<column name="city" type="String" />
		<column name="employees" type="Collection" entity="Employee" mapping-table="Employee_Address"/>
		<!-- Order -->
		<order by="asc">
			<order-column name="addressId"/>
		</order>
		<!-- Finder methods -->
		<finder name="city" return-type="Collection">
			<finder-column name="city" />
		</finder>
	</entity>
</service-builder>
